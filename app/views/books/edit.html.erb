<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
<h1>Editing Book</h1>

<!-- エラーメッセージ -->
<% if @book.errors.any? %>
		<div class="errors"><%=  @book.errors.full_messages.length  %>errors prohibited this book from being saved:</div>
		<ul style="padding-left: 80px;">
			<% @book.errors.full_messages.each do |message| %>
			<li class="error-text"><%= message %></li>
				<% end %>
		</ul>
				<% end %>

<%= form_for(@book) do |f| %>
	<%= f.label :title, 'Title' %><br>
	<%= f.text_field :title  ,class: "col-xs-12"%><br>
	<%= f.label :body, 'Opinoin' %><br>
	<%= f.text_area :body  ,class: "col-xs-12"%><br>
	<%= f.submit "Update Book" ,class: "btn-primary col-xs-12" ,style: "margin:10px 0;"%>
	<% end %>
	<%= link_to 'Show',book_path  ,style: "color:black;"%>
	<%= "|" %>
	<%= link_to 'Back',books_path ,style: "color:black;"%>
</div>
</div>