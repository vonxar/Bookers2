<% if flash["notice"] %>
<div class="flash" style="color:black; padding-left: 110px; padding-top: 10px;">
  <%= flash[:notice] %>
</div>
<% end %>

<div class="container">
  <div class="row">
    <%= render 'layouts/user_info',book:@book , user:@user , name:@users %>


    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.zip(@users).each do |books,user| %>
        <% if books != current_user.id %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, style: "width: 40px; height: 40px;", format: 'jpeg', class: "img-circle  profile-img", fallback: "no_image.jpg" %></td>
            <td><%= link_to books.title  ,book_path(books.id) %></td>
            <td><%= books.body %></td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>