
<div class="col-xs-3">
  <h1><%= label :User_info,'User info' %></h1>
  <%= attachment_image_tag user, :profile_image, size:"100x100", format: 'jpeg', fallback: "no_image.jpg" ,size:"100x100"%>
  
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </table>
  <% if user.id == current_user.id %>
    <div class="row">
      <p><%= link_to '', edit_user_path(user), class: "pull-left btn btn-default glyphicon glyphicon-cog col-xs-12" %></p>
    </div>
  <% end %>


    <div class="row">
      <h3 style="margin-bottom: 20px; margin-left: 10px;">New book</h3>
      <%= form_for book do |f| %>
        <div><%= f.label :title ,'Title' %><br>
          <%= f.text_field :title ,class: "col-xs-12" %>
        </div>
        <div>
          <%= f.label :body , 'Opinion' ,style: "margin-top:10px;"%><br>
          <%= f.text_area :body, class: "col-xs-12"%>
        </div>
        <%= f.submit 'Create Book', class: "btn-primary col-xs-12" ,style: "margin-top:10px;"%>
        <% end %>
    </div>
</div>